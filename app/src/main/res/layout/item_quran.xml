<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/surah_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surah"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/parah_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parah"
            app:layout_constraintStart_toEndOf="@id/surah_text_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ayah_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayah"
            app:layout_constraintStart_toEndOf="@id/parah_text_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/surah_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

